<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
    <style>
        .round {
            border-radius: 100px; /* Радиус скругления */
            box-shadow: 0 0 0 1px lightgray, 0 0 5px #333; /* Параметры теней */
        }
    </style>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-danger fixed-top">
        <div class="container">
            <div>
                <img src="~/logo/logo2.png" style="width:50px; height:50px; margin-right:30px;" /> <br />
            </div>
            <div class="navbar-header">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    
                </button>*@
                @Html.ActionLink("Bands", "Index", "Bands", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav" >
                    <li >@Html.ActionLink("Members", "Index", "Members", null, new { @class = "navbar-brand" })</li>
                    <li >@Html.ActionLink("MemberTypes", "Index", "MemberTypes", null, new { @class = "navbar-brand" })</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top:30px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Music Portal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
