@model IEnumerable<MBand.Models.Member>

@{
    ViewBag.Title = "Members information";
}

<h2>Members information</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberType.Type)
            </th>
            <th>
                Band @Html.DisplayNameFor(model => model.Band.Name)
            </th>
            <th></th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.MemberImg != null)
                    {
                        @Html.Raw("<img class=round style='width:60px; height:60px;' src=\"data:image/jpeg;base64,"
                                        + Convert.ToBase64String(item.MemberImg) + "\" />")
                    }
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.FullName)*@
                    @Html.ActionLink(Html.DisplayFor(modelItem => item.FullName).ToString(), "Details", null, new { id = item.MemberId }, new { @class = "text-reset font-weight-bold" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Band.Name)
                </td>



                @*<td>
                    @if (item.MemberImg != null)
                    {
                        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                        + Convert.ToBase64String(item.MemberImg) + "\" />")
                      
                    }
                </td>*@
                @*<td>
                        @Html.DisplayFor(modelItem => item.MemberImg)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", null, new { id = item.MemberId }, new { @class = "btn btn-light" }) 
                    @Html.ActionLink("Details", "Details", null, new { id = item.MemberId }, new { @class = "btn btn-light" }) 
                    @Html.ActionLink("Delete", "Delete", null, new { id = item.MemberId }, new { @class = "btn btn-light" })
                </td>
            </tr>
        }

</table>
